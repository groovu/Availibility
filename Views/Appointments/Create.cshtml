@model Availibility.Models.Appointment

@{
    ViewData["Title"] = "Create";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.2/css/bulma.min.css">
<!DOCTYPE html>
<h2>Create</h2>

<h4>Appointment</h4>
<hr />
